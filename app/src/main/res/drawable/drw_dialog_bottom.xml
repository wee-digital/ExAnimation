<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="2px" />
            <solid android:color="#258C8C8C" />
            <corners
                android:topLeftRadius="@dimen/radius3"
                android:topRightRadius="@dimen/radius3" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1px" />
            <solid android:color="#308C8C8C" />
            <corners
                android:topLeftRadius="@dimen/radius3"
                android:topRightRadius="@dimen/radius3" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners
                android:topLeftRadius="@dimen/radius4"
                android:topRightRadius="@dimen/radius4" />
        </shape>
    </item>
</layer-list>