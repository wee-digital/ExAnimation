<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:left="1px"
                android:right="1px"
                android:top="4px" />
            <solid android:color="#02E6E6E6" />
            <corners android:radius="@dimen/radius2" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:left="1px"
                android:right="1px"
                android:top="4px" />
            <solid android:color="#05E6E6E6" />
            <corners android:radius="@dimen/radius2" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="3px" />
            <solid android:color="#10E6E6E6" />
            <corners android:radius="@dimen/radius2" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="3px" />
            <solid android:color="#15E6E6E6" />
            <corners android:radius="@dimen/radius3" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="2px" />
            <solid android:color="#20E6E6E6" />
            <corners android:radius="@dimen/radius3" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="2px" />
            <solid android:color="#25E6E6E6" />
            <corners
                android:topLeftRadius="@dimen/radius3"
                android:topRightRadius="@dimen/radius3" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="2px" />
            <solid android:color="#30E6E6E6" />
            <corners
                android:topLeftRadius="@dimen/radius3"
                android:topRightRadius="@dimen/radius3" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners
                android:topLeftRadius="@dimen/radius4"
                android:topRightRadius="@dimen/radius4" />
        </shape>
    </item>
</layer-list>